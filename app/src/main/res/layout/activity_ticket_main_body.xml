<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jeadev.orolasa.Ticket_mainBody"
    android:orientation="vertical"
    android:background="@drawable/back">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/image"
            android:scaleType="fitXY"
            android:layout_weight="0.36"
            android:layout_gravity="center" />
    </FrameLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Juan Delacruz"
        android:id="@+id/lbl_fname"
        android:gravity="center"
        android:layout_weight="0.03"
        android:layout_above="@+id/lbl_birthdate"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="S. My Bahay Street"
        android:id="@+id/lbl_address"
        android:gravity="center"
        android:layout_below="@+id/lbl_lnumber"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1994-12-12"
        android:id="@+id/lbl_birthdate"
        android:gravity="center"
        android:layout_above="@+id/lbl_lnumber"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="l00-00-0302"
        android:id="@+id/lbl_lnumber"
        android:gravity="center"
        android:layout_weight="0.03"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="K324HH2B12J1"
        android:id="@+id/lbl_ticketNumber"
        android:gravity="center"
        android:layout_weight="0.03"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lbl_address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you will get your card and receipt on Monday 1 pm to 2 pm on july 1 2017 "
        android:id="@+id/lbl_appointment"
        android:layout_below="@+id/lbl_ticketNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Re-schedule Appointment"
        android:id="@+id/button11"
        android:layout_below="@+id/lbl_appointment"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#2effffff" />

</RelativeLayout>
